<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.routes.RoutePlannerOptionsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/route_plan_method_txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:text="Routing profile:" />

    <com.atakmap.android.gui.PluginSpinner
        android:id="@+id/route_plan_method"
        style="@style/darkButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:contentDescription="Select Profile"
        android:padding="6dp"
        android:spinnerMode="dialog"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/waypoint_txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:text="Waypoints:" />

    <RelativeLayout
        android:id="@+id/new_waypoint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp">

        <ImageButton
            android:id="@+id/waypoint_add_btn"
            style="@style/customImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="4dp"
            android:padding="4dp"
            android:src="@drawable/btn_add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/waypoint_add_btn"
            android:layout_toStartOf="@+id/point_dropper_btn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/waypoint_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:nextFocusDown="@+id/route_dest_address"
                android:hint="waypoint address"
                android:textSize="16sp"
                android:inputType="textNoSuggestions" />
            <TextView
                android:id="@+id/waypoint_coord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/point_dropper_btn"
            style="@style/customImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/history_btn"
            android:src="@drawable/point_dropper" />
        <ImageButton
            android:id="@+id/history_btn"
            style="@style/customImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/clear_btn"
            android:layout_marginStart="4dp"
            android:src="@drawable/btn_history"/>

        <ImageButton
            android:id="@+id/clear_btn"
            style="@style/customImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/btn_delete" />

    </RelativeLayout>


    <ListView
        android:id="@+id/waypoint_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/stone_100"
        android:dividerHeight="1dp"
        android:scrollbars="none"
        tools:listitem="@layout/waypoint_listitem"
        android:background="@color/charcoal_100"/>




</com.atakmap.android.routes.RoutePlannerOptionsView>