<?xml version="1.0" encoding="utf-8"?>
<com.atakmap.android.routes.RoutePlannerOptionsView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:text="Routing profile:" />

    <com.atakmap.android.gui.PluginSpinner
        android:id="@+id/route_plan_method"
        style="@style/darkButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:contentDescription="Select Profile"
        android:padding="6dp"
        android:spinnerMode="dialog"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:text="Waypoints:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/waypoint_add_btn"
            style="@style/customImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_add" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:id="@+id/route_start_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:nextFocusDown="@+id/route_dest_address"
                android:hint="waypoint address"
                android:textSize="16sp"
                android:inputType="textNoSuggestions" />
            <TextView
                android:id="@+id/route_start_coord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/point_dropper_btn"
                    style="@style/customImageButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:src="@drawable/point_dropper"/>
                <ImageButton
                    android:id="@+id/history_btn"
                    style="@style/customImageButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:padding="4dp"
                    android:src="@drawable/btn_history"/>
            </LinearLayout>

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:text="CLEAR"
                android:textSize="12sp"
                android:background="@drawable/secondary_button"
                android:textColor="@drawable/secondary_button_textcolor"/>

        </LinearLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/waypoint_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/stone_100"
        android:dividerHeight="1dp"
        android:paddingEnd="21dp"
        android:scrollbarStyle="outsideOverlay"
        tools:listitem="@layout/waypoint_listitem"
        android:background="@color/charcoal_100"/>




</com.atakmap.android.routes.RoutePlannerOptionsView>